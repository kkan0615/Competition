<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./layout %>
</head>
<body>
    <% include ./top-nav %>
    <div class="content">
        <div class="advertise">

        </div>
        <% if(user && user.id) { %>
            <p><%= user.nickname %></p>
        <% } %>
        <div class="scroll-rows">
            <% if(newGames) { %>
            <% newGames.forEach(game => { %>
                <div class="scroll-rows-card">
                    <a href="#"><img src="/uploads/game/<%= game.img %>" alt="<%= game.title %>"></a>
                    <div class="scroll-rows-container">
                        <p><%= game.title %></p>
                    </div> <!-- scroll-rows-container end -->
                </div> <!-- scroll-rows-card end -->
            <% }); %>
            <% } else { %>
                <p>No games ...</p>
            <% } %>
        </div> <!-- scroll-rows end -->
        <div class="scroll-rows">
            <% if(upcomingGames) { %>
            <% upcomingGames.forEach(game => { %>
                <div class="scroll-rows-card">
                    <a href="#"><img src="/uploads/game/<%= game.img %>" alt="<%= game.title %>"></a>
                    <div class="scroll-rows-container">
                        <p><%= game.title %></p>
                    </div> <!-- scroll-rows-container end -->
                </div> <!-- scroll-rows-card end -->
            <% }); %>
            <% } else { %>
                <p>No games ...</p>
            <% } %>
        </div> <!-- scroll-rows end -->
    </div>
    <% include ./footer %>
</body>
<style>
    .scroll-rows {
        display: flex;
        background-color:  white;
        overflow-x: auto;
        overflow-y: hidden;
        border-bottom: 0px;
        padding: 20px;
        margin-bottom: 12px;
    }

    .scroll-rows::-webkit-scrollbar {
        width: 5px;
            background-color: #F5F5F5;
    }

        .scroll-rows::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            background-color: #F5F5F5;
            border-radius: 10px;
    }

        .scroll-rows::-webkit-scrollbar-thumb {
        border-radius: 10px;
            background-image: -webkit-gradient(linear,
                                            left bottom,
                                            left top,
                                            color-stop(0.44, rgb(217, 208, 122)),
                                            color-stop(0.72, rgb(161, 177, 75)),
                                            color-stop(0.86, rgb(202, 58, 58)));
    }

    .scroll-rows-card {
        margin-right: 10px;
        border: 2px solid #AE85FF;
        border-radius: 10px;
        max-height: 50%;
    }

    .scroll-rows-card img {
        width: 300px;
        height: 200px;
        border-bottom: 1px solid
    }

    .scroll-rows-card:hover {
        border: 1px solid #777;
    }

    .scroll-rows-container {
        text-align: center;
        padding: 10px 20px;
    }
</style>
</html>