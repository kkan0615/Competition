<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../layout %>
</head>
<body>
    <% console.log(tags) %>
    <% include ../top-nav %>
    <div class="content">
        <div class="search-bar">
            <input type="text" name="search" id="search">
            <button onclick="moveToSearch()">Search</button>
        </div>
        <div class="row">
                <% if(tags) { %>
                    <% tags.forEach(tag => { %>
                        <div class="column">
                            <div class="card">
                                <img src="/uploads/tag/<%= tag.img %>" alt="">
                                <h3><%= tag.title %></h3>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
        </div>
        <button class="create-Buttons"><a href="/tag/newTag">Create tag</a></button>
    </div>
    <style>
        .content {
            margin: 20px;
        }

        .create-Buttons {
            background-color: #AE85FF;
            border: none;
            border-radius: 20px;
        }
        .create-Buttons a {
            font-size: 20px;
            color: white;
            padding: 30px 10px 30px 10px;
            text-decoration: none;
        }
    </style>

    <script>
        function moveToSearch() {
            var text = document.getElementById("search").value;
            console.log(text);
            console.log("hello");

            location.href = "/tag/search/" + text;
        }
    </script>
</body>
</html>